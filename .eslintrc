{
  parser: "babel-eslint",
  env: {
    es6: true,
    browser: true
  },
  parserOptions: {
    ecmaVersion: 6,
    sourceType: "module",
    ecmaFeatures: {
      jsx: true,
      experimentalObjectRestSpread: true
    }
  },
  plugins: [
    "react",
  ],
  extends: ["eslint:recommended", "plugin:react/recommended", "standard"],
  rules: {
    "comma-dangle": [0, "always-multiline"],
    "semi": [2, "always"],
    "no-extra-semi": 2,
    "jsx-quotes": [0, "prefer-single"],
    "react/jsx-boolean-value": [0, "always"],
    "react/jsx-closing-bracket-location": [0, {selfClosing: "after-props", nonEmpty: "after-props"}],
    "react/jsx-curly-spacing": [0, "never", {"allowMultiline": false}],
    "react/jsx-max-props-per-line": [0, {maximum: 100}],
    "react/jsx-no-literals": 0,
    "react/sort-prop-types": 0,
    "react/self-closing-comp": 0,
    "react/sort-comp": 1,
    "no-unused-vars": 0, // 1=warn disallow declaration of variables that are not used in the code
    "no-console": 0,
    "space-before-blocks": 0,
    "space-before-function-paren": 0,
    "keyword-spacing": 0,
    "object-curly-even-spacing": 0,
    "spaced-comment": 0,
    "no-multiple-empty-lines": 0,
    "indent": 0,
    "eol-last": 0,
    "no-proto": 0,
    "no-return-assign": 0,
    "react/no-danger": 0,
    "space-infix-ops": 0,
    "no-unneeded-ternary": 0,
    "generator-star-spacing": 0,
    "space-in-params": 0,
    "space-in-parens": 0,
    "key-spacing": 0,
    "comma-spacing": 0,
    "yield-star-spacing": 0,
    "require-yield": 0,
    "padded-blocks": 0,
    "no-tabs": 0,
    "no-multi-spaces": 0,
    "camelcase": 0,
  },
  settings: {
    "import/resolver": "webpack"
  }
}